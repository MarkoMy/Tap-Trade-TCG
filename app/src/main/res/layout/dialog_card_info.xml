<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/dialogCardImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/card_image"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialogCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_name_placeholder"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogCardImage" />

    <TextView
        android:id="@+id/dialogCardRarity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_rarity_placeholder"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogCardName" />

</androidx.constraintlayout.widget.ConstraintLayout>